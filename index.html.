<html lang="cs">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invisible Canvas AR</title>
    <style>
        body { margin: 0; overflow: hidden; background: #000; font-family: sans-serif; }
        #video-preview { width: 100vw; height: 100vh; object-fit: cover; position: fixed; top: 0; z-index: -1; }
        .ui-overlay { position: absolute; bottom: 30px; width: 100%; display: flex; flex-direction: column; align-items: center; gap: 15px; }
        .ar-label { background: rgba(0, 0, 0, 0.85); color: #FFD700; padding: 20px; border: 2px solid #FFD700; border-radius: 15px; text-align: center; box-shadow: 0 0 20px rgba(255, 215, 0, 0.5); font-weight: bold; min-width: 250px; text-transform: uppercase; letter-spacing: 1px; }
        input { padding: 15px; border-radius: 10px; border: 1px solid #FFD700; background: #111; color: #fff; width: 80%; font-size: 16px; outline: none; }
        button { padding: 15px 30px; background: #FFD700; color: #000; border: none; border-radius: 10px; font-weight: bold; cursor: pointer; font-size: 16px; width: 80%; transition: 0.3s; }
        button:active { background: #fff; }
    </style>
</head>
<body>
    <video id="video-preview" autoplay playsinline></video>
    
    <div class="ui-overlay">
        <div id="display-msg" class="ar-label">SYSTÉM PŘIPRAVEN<br>Databáze: Red-Thunder</div>
        <input type="text" id="user-input" placeholder="Napiš vzkaz do prostoru...">
        <button onclick="updateMessage()">UMÍSTIT VZKAZ</button>
    </div>

    <script>
        async function initCamera() {
            try {
                const stream = await navigator.mediaDevices.getUserMedia({ video: { facingMode: "environment" } });
                document.getElementById('video-preview').srcObject = stream;
            } catch (e) { alert("Povolte prosím kameru pro AR zážitek."); }
        }

        function updateMessage() {
            const input = document.getElementById('user-input');
            const display = document.getElementById('display-msg');
            if(input.value) {
                display.innerHTML = "VZKAZ UKOTVEN:<br>" + input.value;
                input.value = '';
            }
        }
        window.onload = initCamera;
    </script>
</body>
</html>

